<Window x:Class="Ejercicio1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio1"
        mc:Ignorable="d"
        Title="Potencia" Height="500" Width="300">
    <Grid>
        
        <StackPanel Margin = "15" Orientation = "Vertical">
            <TextBlock Text = "Ingrese el numero: " FontSize = "24"/>
            <TextBox Name = "TextBoxNumero"  FontSize = "24"/>
              <TextBlock Text = "Ingrese el exponente: " FontSize = "24"/>
            <TextBox Name = "TextBoxExponente"  FontSize = "24"/>
		    <Button Content = "Calcular" FontSize = "24" Click = "CalcularButton_Click"/>
            <TextBox Name = "TextBoxResultado"  FontSize = "24" />
        
	</StackPanel>
    </Grid>
</Window>

